@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Données personnelles";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-6">
        <p>Votre compte contient des données personnelles. Vous pouvez télécharger ou supprimer ces données.</p>

        <form asp-page-handler="Download" method="post" class="mb-3">
            <button class="btn btn-primary" type="submit">
                <i class="fas fa-download"></i> Télécharger mes données
            </button>
        </form>

        <form asp-page-handler="Delete" method="post">
            <button class="btn btn-danger" type="submit">
                <i class="fas fa-trash"></i> Supprimer mon compte
            </button>
        </form>
    </div>
</div>