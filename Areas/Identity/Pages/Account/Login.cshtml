@page
@model LoginModel

@{
    ViewData["Title"] = "Connexion";
}

<style>
    /* Réutilisation exacte du style de votre page d'accueil */
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 3rem 2rem; /* Un peu moins haut que l'accueil */
        border-radius: 15px;
        margin-bottom: 2rem;
        text-align: center;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .feature-card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        background: white;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05); /* Légère ombre ajoutée */
    }

    .form-floating > label {
        padding-left: 2.5rem; /* Espace pour l'icône */
    }

    .input-icon {
        position: absolute;
        top: 1.1rem;
        left: 1rem;
        color: #6c757d;
        z-index: 10;
    }

    .btn-custom-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        color: white;
        transition: all 0.3s;
    }

        .btn-custom-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
            color: white;
        }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            <div class="hero-section">
                <h1 class="display-5 mb-2">
                    <i class="fas fa-user-md"></i> @ViewData["Title"]
                </h1>
                <p class="lead mb-0" style="font-size: 1.1rem;">Accès sécurisé au Cabinet Médical</p>
            </div>

            <div class="card feature-card p-4">
                <div class="card-body">
                    <section>
                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger text-center" role="alert"></div>

                            <div class="form-floating mb-3 position-relative">
                                <i class="fas fa-envelope input-icon"></i>
                                <input asp-for="Input.Email" class="form-control ps-5" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email" class="ps-5">Email</label>
                                <span asp-validation-for="Input.Email" class="text-danger small"></span>
                            </div>

                            <div class="form-floating mb-3 position-relative">
                                <i class="fas fa-lock input-icon"></i>
                                <input asp-for="Input.Password" class="form-control ps-5" autocomplete="current-password" aria-required="true" placeholder="password" />
                                <label asp-for="Input.Password" class="ps-5">Mot de passe</label>
                                <span asp-validation-for="Input.Password" class="text-danger small"></span>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <div class="form-check">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    <label class="form-check-label text-secondary" asp-for="Input.RememberMe">
                                        Se souvenir
                                    </label>
                                </div>
                                <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none small" style="color: #667eea;">Oublié ?</a>
                            </div>

                            <div class="d-grid gap-2">
                                <button id="login-submit" type="submit" class="btn btn-lg btn-custom-primary">
                                    <i class="fas fa-sign-in-alt me-2"></i> Se connecter
                                </button>
                            </div>

                            <div class="text-center mt-4 pt-3 border-top">
                                <p class="text-muted mb-1">Pas encore de compte ?</p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="fw-bold text-decoration-none" style="color: #764ba2;">
                                    <i class="fas fa-user-plus"></i> Créer un dossier patient
                                </a>
                            </div>
                        </form>
                    </section>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}