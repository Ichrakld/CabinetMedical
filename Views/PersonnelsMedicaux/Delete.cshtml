@model GestionCabinetMedical.Models.PersonnelMedical

@{
    ViewData["Title"] = "Supprimer un membre";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="text-center mb-4">
                <h1 class="text-danger"><i class="fas fa-user-times"></i> Suppression de Personnel</h1>
                <p class="lead text-muted">Êtes-vous sûr de vouloir supprimer ce membre de l'équipe ?</p>
            </div>

            <div class="alert alert-warning border-warning shadow-sm" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Attention :</strong> Cette action est irréversible. Le membre sera retiré définitivement de la liste du personnel.
            </div>

            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0 text-secondary"><i class="fas fa-id-badge"></i> Détails du membre</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted">Nom complet</dt>
                        <dd class="col-sm-8 fw-bold">
                            @Html.DisplayFor(model => model.Nom)
                        </dd>

                        <dt class="col-sm-4 text-muted">Fonction / Poste</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-primary">
                                <i class="fas fa-briefcase me-1"></i> @Html.DisplayFor(model => model.Fonction)
                            </span>
                        </dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" class="text-center">
                <input type="hidden" asp-for="Id" />

                <button type="submit" class="btn btn-danger btn-lg px-4 me-2">
                    <i class="fas fa-trash-alt me-2"></i> Confirmer la suppression
                </button>

                <a asp-action="Index" class="btn btn-secondary btn-lg px-4">
                    <i class="fas fa-arrow-left me-2"></i> Annuler
                </a>
            </form>

        </div>
    </div>
</div>