@model GestionCabinetMedical.ViewModels.PersonnelMedicalIndexViewModel
@using GestionCabinetMedical.ViewModels

@{
    ViewData["Title"] = "Personnel Médical";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fas fa-users-cog text-primary me-2"></i>Équipe Administrative & Technique
        </h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-user-plus me-1"></i>Nouveau Membre
        </a>
    </div>

    <!-- Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Statistiques rapides -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card bg-primary text-white shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-white-50 mb-1">Total Personnel</h6>
                            <h2 class="mb-0">@Model.TotalPersonnel</h2>
                        </div>
                        <i class="fas fa-users fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card bg-info text-white shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-white-50 mb-1">Fonctions Distinctes</h6>
                            <h2 class="mb-0">@Model.FonctionsDistinctes</h2>
                        </div>
                        <i class="fas fa-briefcase fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtres -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" id="filterForm">
                <div class="row g-3 align-items-end">
                    <div class="col-md-4">
                        <label class="form-label">
                            <i class="fas fa-search me-1"></i>Recherche
                        </label>
                        <input type="text" name="searchTerm" class="form-control"
                               placeholder="Nom, fonction..."
                               value="@Model.SearchTerm">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">
                            <i class="fas fa-briefcase me-1"></i>Fonction
                        </label>
                        <select name="fonction" class="form-select">
                            <option value="">Toutes les fonctions</option>
                            @foreach (var func in Model.Fonctions)
                            {
                                <option value="@func" selected="@(Model.Fonction == func ? "selected" : null)">@func</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">
                            <i class="fas fa-sort me-1"></i>Trier par
                        </label>
                        <select name="sortBy" class="form-select">
                            <option value="nom" selected="@(Model.SortBy == "nom" ? "selected" : null)">Nom</option>
                            <option value="fonction" selected="@(Model.SortBy == "fonction" ? "selected" : null)">Fonction</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-search me-1"></i>Filtrer
                        </button>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(Model.SearchTerm) || !string.IsNullOrEmpty(Model.Fonction))
                {
                    <div class="mt-3">
                        <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                            <i class="fas fa-times me-1"></i>Réinitialiser les filtres
                        </a>
                    </div>
                }
            </form>
        </div>
    </div>

    <!-- Liste du personnel en grille -->
    <div class="row">
        @if (!Model.PersonnelMedicals.Any())
        {
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-users-cog fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Aucun membre du personnel trouvé</h5>
                        <p class="text-muted mb-0">Essayez de modifier vos critères de recherche</p>
                    </div>
                </div>
            </div>
        }
        else
        {
            @foreach (var personnel in Model.PersonnelMedicals)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <div class="rounded-circle bg-light d-inline-flex align-items-center justify-content-center"
                                     style="width: 80px; height: 80px;">
                                    <i class="fas fa-user-tie fa-2x text-secondary"></i>
                                </div>
                            </div>
                            <h5 class="card-title mb-1">@personnel.Nom</h5>
                            <p class="text-primary fw-bold mb-3">@personnel.Fonction</p>
                        </div>
                        <div class="card-footer bg-transparent border-top-0 text-center pb-3">
                            <div class="btn-group">
                                <a asp-action="Details" asp-route-id="@personnel.Id" class="btn btn-outline-info btn-sm">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@personnel.Id" class="btn btn-outline-warning btn-sm">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@personnel.Id" class="btn btn-outline-danger btn-sm">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    <!-- Pagination -->
    @if (Model.PersonnelMedicals.TotalCount > 0)
    {
        <div class="card shadow-sm mt-4">
            <div class="card-footer bg-white">
                @await Html.PartialAsync("_Pagination", new PaginationPartialViewModel
                {
                    CurrentPage = Model.PersonnelMedicals.CurrentPage,
                        TotalPages = Model.PersonnelMedicals.TotalPages,
                        PageSize = Model.PageSize,
                        TotalCount = Model.PersonnelMedicals.TotalCount,
                        ActionName = "Index",
                        FormId = "pageSizeFormPersonnel",
                        RouteValues = new Dictionary<string, string?>
                        {
                        { "searchTerm", Model.SearchTerm },
                        { "fonction", Model.Fonction },
                        { "sortBy", Model.SortBy }
                        }
                        })
        </div>
    </div>
        }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('select[name="fonction"], select[name="sortBy"]').change(function() {
                $('#filterForm').submit();
            });
        });
    </script>
}
