@model IEnumerable<GestionCabinetMedical.Models.PersonnelMedical>

@{
    ViewData["Title"] = "Personnel Médical";
}

<div class="page-header">
    <h1><i class="fas fa-users-cog"></i> Équipe Administrative & Technique</h1>
</div>

<div class="mb-4">
    <a asp-action="Create" class="btn btn-success btn-custom">
        <i class="fas fa-user-plus"></i> Nouveau Membre
    </a>
</div>

<div class="row">
    @if (Model != null && Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <div class="rounded-circle bg-light d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                                <i class="fas fa-user-tie fa-2x text-secondary"></i>
                            </div>
                        </div>
                        <h5 class="card-title mb-1">@item.Nom</h5>
                        <p class="text-primary fw-bold mb-3">@item.Fonction</p>
                    </div>
                    <div class="card-footer bg-transparent border-top-0 text-center pb-3">
                        <div class="btn-group">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                                <i class="fas fa-trash"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info text-center py-4">
                <i class="fas fa-info-circle fa-2x mb-3"></i>
                <p class="mb-0">Aucun membre du personnel enregistré.</p>
            </div>
        </div>
    }
</div>