@model GestionCabinetMedical.Models.PersonnelMedical

@{
    ViewData["Title"] = "Détails Personnel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="page-header mb-4">
        <h1><i class="fas fa-id-card-alt text-info"></i> Profil Personnel</h1>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0 text-secondary"><i class="fas fa-info-circle"></i> Fiche Employé</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-2 text-center mb-3">
                    <i class="fas fa-user-tie fa-6x text-secondary"></i>
                </div>
                <div class="col-md-10">
                    <dl class="row mb-0">
                        <dt class="col-sm-3 mb-3">
                            <i class="fas fa-user text-primary me-2"></i> @Html.DisplayNameFor(model => model.Nom)
                        </dt>
                        <dd class="col-sm-9 mb-3 border-bottom pb-2 fw-bold">
                            @Html.DisplayFor(model => model.Nom)
                        </dd>

                        <dt class="col-sm-3 mb-3">
                            <i class="fas fa-briefcase text-success me-2"></i> @Html.DisplayNameFor(model => model.Fonction)
                        </dt>
                        <dd class="col-sm-9 mb-3">
                            <span class="badge bg-secondary fs-6">@Html.DisplayFor(model => model.Fonction)</span>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer bg-light text-end">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
                <i class="fas fa-edit"></i> Modifier
            </a>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
        </div>
    </div>
</div>