@using Microsoft.AspNetCore.Identity
@using GestionCabinetMedical.Areas.Identity.Data
@using GestionCabinetMedical.Models

@inject SignInManager<Userper> SignInManager
@inject UserManager<Userper> UserManager
@inject BdCabinetMedicalContext _context

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        // PAS BESOIN DE @{ ICI, NOUS SOMMES DEJA EN MODE CODE

        string nomAffichage = User.Identity.Name; // Par défaut : l'email

        // On cherche l'utilisateur dans la table Utilisateurs via son email
        // Note: Assurez-vous que "_context" est bien injecté en haut du fichier
        var utilisateur = _context.Utilisateurs.FirstOrDefault(u => u.Email == User.Identity.Name);

        if (utilisateur != null)
        {
            // Si trouvé, on affiche "Prénom Nom"
            nomAffichage = utilisateur.Prenom + " " + utilisateur.Nom;
        }

        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                Bonjour <strong>@nomAffichage</strong>
            </a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Déconnexion</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">S'inscrire</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Se connecter</a>
        </li>
    }
</ul>