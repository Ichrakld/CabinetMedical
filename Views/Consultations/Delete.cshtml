@model GestionCabinetMedical.Models.Consultation

@{
    ViewData["Title"] = "Supprimer Consultation";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="text-center mb-4">
                <h1 class="text-danger"><i class="fas fa-file-prescription"></i> Suppression de Consultation</h1>
                <p class="lead text-muted">Êtes-vous sûr de vouloir supprimer cette consultation ?</p>
            </div>

            <div class="alert alert-warning border-warning shadow-sm">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Attention :</strong> Cette action est irréversible.
            </div>

            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0 text-secondary">Détails de la consultation #@Model.NumDetail</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted">Date</dt>
                        <dd class="col-sm-8 fw-bold">@Model.DateConsultation?.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-4 text-muted">Dossier Médical</dt>
                        <dd class="col-sm-8">N° @Model.DossierMedicalId</dd>

                        <dt class="col-sm-4 text-muted">Patient</dt>
                        <dd class="col-sm-8">
                            @if (Model.DossierMedical?.Patient?.IdNavigation != null)
                            {
                                <i class="fas fa-user-injured me-1"></i>
                                @($"{Model.DossierMedical.Patient.IdNavigation.Nom} {Model.DossierMedical.Patient.IdNavigation.Prenom}")
                            }
                            else
                            {
                                <span class="text-muted">Non disponible</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" class="text-center">
                <input type="hidden" asp-for="NumDetail" />
                <button type="submit" class="btn btn-danger btn-lg px-4 me-2">
                    <i class="fas fa-trash-alt me-2"></i> Confirmer
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg px-4">Annuler</a>
            </form>
        </div>
    </div>
</div>