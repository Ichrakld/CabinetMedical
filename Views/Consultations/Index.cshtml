@model GestionCabinetMedical.ViewModels.PaginatedList<GestionCabinetMedical.Models.Consultation>
@using GestionCabinetMedical.ViewModels

@{
    ViewData["Title"] = "Consultations";
}

<style>
    .diagnostic-text {
        max-width: 200px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .notes-preview {
        max-width: 150px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        font-size: 0.85rem;
    }
</style>

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fas fa-stethoscope text-info me-2"></i>Consultations
        </h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus-circle me-1"></i>Nouvelle Consultation
        </a>
    </div>

    <!-- Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Statistiques -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-info text-white shadow-sm h-100">
                <div class="card-body py-3 text-center">
                    <i class="fas fa-stethoscope fa-2x mb-2"></i>
                    <h3 class="mb-0">@ViewBag.TotalConsultations</h3>
                    <small>Total Consultations</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-primary text-white shadow-sm h-100">
                <div class="card-body py-3 text-center">
                    <i class="fas fa-calendar-day fa-2x mb-2"></i>
                    <h3 class="mb-0">@ViewBag.ConsultationsAujourdhui</h3>
                    <small>Aujourd'hui</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white shadow-sm h-100">
                <div class="card-body py-3 text-center">
                    <i class="fas fa-diagnoses fa-2x mb-2"></i>
                    <h3 class="mb-0">@ViewBag.AvecDiagnostic</h3>
                    <small>Avec Diagnostic</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark shadow-sm h-100">
                <div class="card-body py-3 text-center">
                    <i class="fas fa-pills fa-2x mb-2"></i>
                    <h3 class="mb-0">@ViewBag.TotalTraitements</h3>
                    <small>Traitements</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtres -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" id="filterForm">
                <div class="row g-3 align-items-end">
                    <div class="col-md-3">
                        <label class="form-label">
                            <i class="fas fa-search me-1"></i>Recherche
                        </label>
                        <input type="text" name="searchTerm" class="form-control"
                               placeholder="Patient, diagnostic, notes..."
                               value="@ViewBag.SearchTerm">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Date début</label>
                        <input type="date" name="dateDebut" class="form-control"
                               value="@(ViewBag.DateDebut != null ? ((DateTime)ViewBag.DateDebut).ToString("yyyy-MM-dd") : "")">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Date fin</label>
                        <input type="date" name="dateFin" class="form-control"
                               value="@(ViewBag.DateFin != null ? ((DateTime)ViewBag.DateFin).ToString("yyyy-MM-dd") : "")">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">
                            <i class="fas fa-folder me-1"></i>Dossier
                        </label>
                        <select name="dossierId" class="form-select">
                            <option value="">Tous</option>
                            @if (ViewBag.Dossiers != null)
                            {
                                foreach (var item in (SelectList)ViewBag.Dossiers)
                                {
                                    <option value="@item.Value" selected="@(ViewBag.DossierId?.ToString() == item.Value ? "selected" : null)">
                                        @item.Text
                                    </option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">
                            <i class="fas fa-sort me-1"></i>Trier par
                        </label>
                        <select name="sortBy" class="form-select">
                            <option value="date" selected="@(ViewBag.SortBy == "date" ? "selected" : null)">Date</option>
                            <option value="patient" selected="@(ViewBag.SortBy == "patient" ? "selected" : null)">Patient</option>
                            <option value="dossier" selected="@(ViewBag.SortBy == "dossier" ? "selected" : null)">N° Dossier</option>
                        </select>
                    </div>
                    <div class="col-md-1">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm) || ViewBag.DateDebut != null || ViewBag.DateFin != null || ViewBag.DossierId != null)
                {
                    <div class="mt-3">
                        <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                            <i class="fas fa-times me-1"></i>Réinitialiser
                        </a>
                        <span class="ms-2 text-muted">
                            @Model.TotalCount résultat(s) trouvé(s)
                        </span>
                    </div>
                }
            </form>
        </div>
    </div>

    <!-- Liste des consultations -->
    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 60px;"><i class="fas fa-hashtag"></i> N°</th>
                        <th style="width: 130px;"><i class="fas fa-calendar"></i> Date</th>
                        <th><i class="fas fa-user"></i> Patient</th>
                        <th><i class="fas fa-diagnoses"></i> Diagnostic</th>
                        <th><i class="fas fa-sticky-note"></i> Notes</th>
                        <th style="width: 80px;"><i class="fas fa-pills"></i> Trait.</th>
                        <th style="width: 130px;" class="text-center"><i class="fas fa-cog"></i> Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            var isToday = item.DateConsultation.Date == DateTime.Today;
                            <tr class="@(isToday ? "table-info" : "")">
                                <td><strong>#@item.NumDetail</strong></td>
                                <td>
                                    <strong>@item.DateConsultation.ToString("dd/MM/yyyy")</strong>
                                    <br />
                                    <small class="text-muted"><i class="fas fa-clock"></i> @item.DateConsultation.ToString("HH:mm")</small>
                                    @if (isToday)
                                    {
                                        <br />
                                        <span class="badge bg-info">Aujourd'hui</span>
                                    }
                                </td>
                                <td>
                                    @if (item.DossierMedical?.Patient?.IdNavigation != null)
                                    {
                                        <a asp-controller="Patients" asp-action="Details" asp-route-id="@item.DossierMedical.PatientId">
                                            <i class="fas fa-user text-primary"></i>
                                            @item.DossierMedical.Patient.IdNavigation.Nom @item.DossierMedical.Patient.IdNavigation.Prenom
                                        </a>
                                        <br />
                                        <small class="text-muted">
                                            <a asp-controller="DossiersMedicaux" asp-action="Details" asp-route-id="@item.DossierMedicalId">
                                                <i class="fas fa-folder"></i> Dossier #@item.DossierMedicalId
                                            </a>
                                        </small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Dossier #@item.DossierMedicalId</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Diagnostic))
                                    {
                                        <span class="diagnostic-text d-inline-block" title="@item.Diagnostic">
                                            <i class="fas fa-diagnoses text-primary"></i>
                                            @(item.Diagnostic.Length > 35 ? item.Diagnostic.Substring(0, 35) + "..." : item.Diagnostic)
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted"><i class="fas fa-minus-circle"></i> Non renseigné</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Notes))
                                    {
                                        <span class="notes-preview d-inline-block text-muted" title="@item.Notes">
                                            <i class="fas fa-sticky-note text-secondary"></i>
                                            @(item.Notes.Length > 25 ? item.Notes.Substring(0, 25) + "..." : item.Notes)
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @{
                                        var nbTraitements = item.Traitements?.Count ?? 0;
                                        var badgeClass = nbTraitements > 0 ? "bg-success" : "bg-secondary";
                                    }
                                    <span class="badge @badgeClass fs-6">@nbTraitements</span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.NumDetail" class="btn btn-sm btn-info" title="Détails">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.NumDetail" class="btn btn-sm btn-warning" title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.NumDetail" class="btn btn-sm btn-danger" title="Supprimer">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center py-5">
                                <i class="fas fa-stethoscope fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">Aucune consultation trouvée</h5>
                                <p class="text-muted mb-0">Essayez de modifier vos critères de recherche</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @if (Model.TotalCount > 0)
        {
            <div class="card-footer bg-white">
                @await Html.PartialAsync("_Pagination", new PaginationPartialViewModel
                {
                    CurrentPage = Model.CurrentPage,
                        TotalPages = Model.TotalPages,
                        PageSize = Model.PageSize,
                        TotalCount = Model.TotalCount,
                        ActionName = "Index",
                        FormId = "pageSizeFormConsultations",
                        RouteValues = new Dictionary<string, string?>
                        {
                        { "searchTerm", ViewBag.SearchTerm },
                        { "dateDebut", ViewBag.DateDebut != null ? ((DateTime)ViewBag.DateDebut).ToString("yyyy-MM-dd") : null },
                        { "dateFin", ViewBag.DateFin != null ? ((DateTime)ViewBag.DateFin).ToString("yyyy-MM-dd") : null },
                        { "dossierId", ViewBag.DossierId?.ToString() },
                        { "sortBy", ViewBag.SortBy },
                        { "sortOrder", ViewBag.SortOrder }
                        }
                        })
        </div>
                }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('select[name="dossierId"], select[name="sortBy"]').change(function() {
                $('#filterForm').submit();
            });
        });
    </script>
}
