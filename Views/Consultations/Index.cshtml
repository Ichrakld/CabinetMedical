@model IEnumerable<GestionCabinetMedical.Models.Consultation>

@{
    ViewData["Title"] = "Consultations";
}

<div class="page-header">
    <h1><i class="fas fa-stethoscope"></i> Consultations Médicales</h1>
</div>

<div class="mb-4">
    <a asp-action="Create" class="btn btn-success btn-custom">
        <i class="fas fa-plus-circle"></i> Nouvelle Consultation
    </a>
</div>

<div class="row">
    @if (Model != null && Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-file-medical"></i> Consultation #@item.NumDetail
                        </h5>
                    </div>
                    <div class="card-body">
                        <p><strong><i class="fas fa-calendar"></i> Date:</strong> @item.DateConsultation?.ToString("dd/MM/yyyy HH:mm")</p>
                        <p><strong><i class="fas fa-folder"></i> Dossier:</strong> #@item.DossierMedicalId</p>
                        <div class="mb-3">
                            <strong><i class="fas fa-notes-medical"></i> Diagnostic:</strong>
                            <p class="text-muted">@item.Diagnostic</p>
                        </div>
                        <div class="btn-group">
                            <a asp-action="Details" asp-route-id="@item.NumDetail" class="btn btn-sm btn-info">
                                <i class="fas fa-eye"></i> Détails
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.NumDetail" class="btn btn-sm btn-warning">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.NumDetail" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash-alt"></i> Supprimer
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info text-center">
                <i class="fas fa-stethoscope fa-3x mb-3"></i>
                <p>Aucune consultation enregistrée</p>
            </div>
        </div>
    }
</div>