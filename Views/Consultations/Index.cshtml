@model IEnumerable<GestionCabinetMedical.Models.Consultation>

@{
    ViewData["Title"] = "Consultations";
}

<style>
    .diagnostic-text {
        max-width: 200px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .notes-preview {
        max-width: 150px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        font-size: 0.85rem;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-stethoscope text-info"></i> Consultations</h1>
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus-circle"></i> Nouvelle Consultation
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Statistiques -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body text-center">
                <i class="fas fa-stethoscope fa-2x mb-2"></i>
                <h3>@Model.Count()</h3>
                <small>Total Consultations</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body text-center">
                <i class="fas fa-calendar-day fa-2x mb-2"></i>
                <h3>@Model.Count(c => c.DateConsultation.Date == DateTime.Today)</h3>
                <small>Aujourd'hui</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body text-center">
                <i class="fas fa-diagnoses fa-2x mb-2"></i>
                <h3>@Model.Count(c => !string.IsNullOrEmpty(c.Diagnostic))</h3>
                <small>Avec Diagnostic</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-dark">
            <div class="card-body text-center">
                <i class="fas fa-pills fa-2x mb-2"></i>
                <h3>@Model.Sum(c => c.Traitements?.Count ?? 0)</h3>
                <small>Traitements</small>
            </div>
        </div>
    </div>
</div>

<div class="card shadow">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 60px;"><i class="fas fa-hashtag"></i> N°</th>
                        <th style="width: 130px;"><i class="fas fa-calendar"></i> Date</th>
                        <th><i class="fas fa-user"></i> Patient</th>
                        <th><i class="fas fa-diagnoses"></i> Diagnostic</th>
                        <th><i class="fas fa-sticky-note"></i> Notes</th>
                        <th style="width: 80px;"><i class="fas fa-pills"></i> Trait.</th>
                        <th style="width: 130px;" class="text-center"><i class="fas fa-cog"></i> Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            var isToday = item.DateConsultation.Date == DateTime.Today;
                            <tr class="@(isToday ? "table-info" : "")">
                                <td><strong>#@item.NumDetail</strong></td>
                                <td>
                                    <strong>@item.DateConsultation.ToString("dd/MM/yyyy")</strong>
                                    <br />
                                    <small class="text-muted"><i class="fas fa-clock"></i> @item.DateConsultation.ToString("HH:mm")</small>
                                    @if (isToday)
                                    {
                                        <br />
                            
                                        <span class="badge bg-info">Aujourd'hui</span>
                                    }
                                </td>
                                <td>
                                    @if (item.DossierMedical?.Patient?.IdNavigation != null)
                                    {
                                        <a asp-controller="Patients" asp-action="Details" asp-route-id="@item.DossierMedical.PatientId">
                                            <i class="fas fa-user text-primary"></i>
                                            @item.DossierMedical.Patient.IdNavigation.Nom @item.DossierMedical.Patient.IdNavigation.Prenom
                                        </a>
                                        <br />
                                        <small class="text-muted">
                                            <a asp-controller="DossiersMedicaux" asp-action="Details" asp-route-id="@item.DossierMedicalId">
                                                <i class="fas fa-folder"></i> Dossier #@item.DossierMedicalId
                                            </a>
                                        </small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Dossier #@item.DossierMedicalId</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Diagnostic))
                                    {
                                        <span class="diagnostic-text d-inline-block" title="@item.Diagnostic">
                                            <i class="fas fa-diagnoses text-primary"></i>
                                            @(item.Diagnostic.Length > 35 ? item.Diagnostic.Substring(0, 35) + "..." : item.Diagnostic)
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted"><i class="fas fa-minus-circle"></i> Non renseigné</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Notes))
                                    {
                                        <span class="notes-preview d-inline-block text-muted" title="@item.Notes">
                                            <i class="fas fa-sticky-note text-secondary"></i>
                                            @(item.Notes.Length > 25 ? item.Notes.Substring(0, 25) + "..." : item.Notes)
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @{
                                        var nbTraitements = item.Traitements?.Count ?? 0;
                                        var badgeClass = nbTraitements > 0 ? "bg-success" : "bg-secondary";
                                    }
                                    <span class="badge @badgeClass fs-6">@nbTraitements</span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.NumDetail" class="btn btn-sm btn-info" title="Détails">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.NumDetail" class="btn btn-sm btn-warning" title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.NumDetail" class="btn btn-sm btn-danger" title="Supprimer">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center py-5">
                                <i class="fas fa-stethoscope fa-3x text-muted mb-3"></i>
                                <p class="text-muted">Aucune consultation enregistrée</p>
                                <a asp-action="Create" class="btn btn-success">
                                    <i class="fas fa-plus"></i> Créer une consultation
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
