@model GestionCabinetMedical.Models.Consultation

@{
    ViewData["Title"] = "Détails Consultation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="page-header mb-4">
        <h1><i class="fas fa-file-medical-alt text-info"></i> Détails de la Consultation</h1>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0 text-secondary">
                <i class="fas fa-info-circle"></i> Consultation N° @Model.NumDetail
            </h5>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 mb-3">
                    <i class="fas fa-calendar-alt text-primary me-2"></i> @Html.DisplayNameFor(model => model.DateConsultation)
                </dt>
                <dd class="col-sm-9 mb-3 border-bottom pb-2">
                    @Model.DateConsultation?.ToString("dd MMMM yyyy à HH:mm")
                </dd>

                <dt class="col-sm-3 mb-3">
                    <i class="fas fa-folder-open text-warning me-2"></i> Dossier Médical
                </dt>
                <dd class="col-sm-9 mb-3 border-bottom pb-2">
                    <span class="fw-bold">N° @Model.DossierMedicalId</span>
                    @if (Model.DossierMedical?.Patient?.IdNavigation != null)
                    {
                        <span class="text-muted ms-2">
                            (Patient : @Model.DossierMedical.Patient.IdNavigation.Nom @Model.DossierMedical.Patient.IdNavigation.Prenom)
                        </span>
                    }
                </dd>

                <dt class="col-sm-3 mb-3">
                    <i class="fas fa-stethoscope text-success me-2"></i> @Html.DisplayNameFor(model => model.Diagnostic)
                </dt>
                <dd class="col-sm-9 mb-3">
                    <div class="p-3 bg-light rounded border">
                        @Html.DisplayFor(model => model.Diagnostic)
                    </div>
                </dd>
            </dl>
        </div>
        <div class="card-footer bg-light text-end">
            <a asp-action="Edit" asp-route-id="@Model?.NumDetail" class="btn btn-warning">
                <i class="fas fa-edit"></i> Modifier
            </a>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
        </div>
    </div>
</div>