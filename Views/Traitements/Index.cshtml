@model IEnumerable<GestionCabinetMedical.Models.Traitement>

@{
    ViewData["Title"] = "Traitements";
}

<div class="page-header">
    <h1><i class="fas fa-syringe"></i> Traitements Prescrits</h1>
</div>

<div class="mb-4">
    <a asp-action="Create" class="btn btn-success btn-custom">
        <i class="fas fa-plus-circle"></i> Nouveau Traitement
    </a>
</div>

<div class="table-custom">
    <table class="table table-hover mb-0">
        <thead class="table-light">
            <tr>
                <th><i class="fas fa-hashtag"></i> N°</th>
                <th><i class="fas fa-pills"></i> Type de Traitement</th>
                <th><i class="fas fa-file-medical"></i> Consultation</th>
                <th class="text-center"><i class="fas fa-cog"></i> Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.NumPro</td>
                        <td><span class="badge bg-success">@item.TypeTraitement</span></td>
                        <td>Consultation #@item.ConsultationId</td>
                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@item.NumPro" class="btn btn-sm btn-info">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.NumPro" class="btn btn-sm btn-warning">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.NumPro" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center py-4">
                        <i class="fas fa-syringe fa-3x text-muted mb-3"></i>
                        <p class="text-muted">Aucun traitement prescrit</p>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>