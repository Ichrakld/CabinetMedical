@model IEnumerable<GestionCabinetMedical.Models.Traitement>

@{
    ViewData["Title"] = "Traitements";
}

<style>
    .traitement-text {
        max-width: 400px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        display: inline-block;
        vertical-align: middle;
    }

    .table-responsive {
        overflow-x: auto;
    }

    .action-buttons {
        white-space: nowrap;
        min-width: 150px;
    }

    .action-buttons .btn-group {
        flex-wrap: nowrap;
    }
</style>

<div class="page-header">
    <h1><i class="fas fa-syringe"></i> Traitements Prescrits</h1>
</div>

<div class="mb-4">
    <a asp-action="Create" class="btn btn-success btn-custom">
        <i class="fas fa-plus-circle"></i> Nouveau Traitement
    </a>
</div>

<div class="table-custom">
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th style="width: 60px;"><i class="fas fa-hashtag"></i> N°</th>
                    <th><i class="fas fa-pills"></i> Type de Traitement</th>
                    <th style="width: 150px;"><i class="fas fa-file-medical"></i> Consultation</th>
                    <th style="width: 150px;" class="text-center"><i class="fas fa-cog"></i> Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.NumPro</td>
                            <td>
                                <span class="badge bg-success traitement-text" title="@item.TypeTraitement">
                                    @item.TypeTraitement
                                </span>
                            </td>
                            <td>
                                <a asp-controller="Consultations" asp-action="Details" asp-route-id="@item.ConsultationId" class="text-decoration-none">
                                    <i class="fas fa-file-medical"></i> Consultation #@item.ConsultationId
                                </a>
                            </td>
                            <td class="text-center action-buttons">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.NumPro" class="btn btn-sm btn-info" title="Détails">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.NumPro" class="btn btn-sm btn-warning" title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.NumPro" class="btn btn-sm btn-danger" title="Supprimer">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center py-4">
                            <i class="fas fa-syringe fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Aucun traitement prescrit</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
