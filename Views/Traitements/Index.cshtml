@model GestionCabinetMedical.ViewModels.TraitementIndexViewModel
@using GestionCabinetMedical.ViewModels

@{
    ViewData["Title"] = "Traitements";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fas fa-syringe text-primary me-2"></i>Traitements Prescrits
        </h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus-circle me-1"></i>Nouveau Traitement
        </a>
    </div>

    <!-- Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Statistiques rapides -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card bg-primary text-white shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-white-50 mb-1">Total Traitements</h6>
                            <h2 class="mb-0">@Model.TotalTraitements</h2>
                        </div>
                        <i class="fas fa-pills fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card bg-info text-white shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-white-50 mb-1">Récents (30j)</h6>
                            <h2 class="mb-0">@Model.TraitementsRecents</h2>
                        </div>
                        <i class="fas fa-clock fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtres -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" id="filterForm">
                <div class="row g-3 align-items-end">
                    <div class="col-md-6">
                        <label class="form-label">
                            <i class="fas fa-search me-1"></i>Recherche
                        </label>
                        <input type="text" name="searchTerm" class="form-control"
                               placeholder="Type de traitement, patient..."
                               value="@Model.SearchTerm">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">
                            <i class="fas fa-sort me-1"></i>Trier par
                        </label>
                        <select name="sortBy" class="form-select">
                            <option value="recent" selected="@(Model.SortBy == "recent" ? "selected" : null)">Plus récents</option>
                            <option value="ancien" selected="@(Model.SortBy == "ancien" ? "selected" : null)">Plus anciens</option>
                            <option value="type" selected="@(Model.SortBy == "type" ? "selected" : null)">Type de traitement</option>
                            <option value="patient" selected="@(Model.SortBy == "patient" ? "selected" : null)">Patient</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-search me-1"></i>Filtrer
                        </button>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(Model.SearchTerm))
                {
                    <div class="mt-3">
                        <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                            <i class="fas fa-times me-1"></i>Réinitialiser les filtres
                        </a>
                    </div>
                }
            </form>
        </div>
    </div>

    <!-- Liste des traitements -->
    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 60px;"><i class="fas fa-hashtag"></i> N°</th>
                        <th><i class="fas fa-pills"></i> Type de Traitement</th>
                        <th><i class="fas fa-user"></i> Patient</th>
                        <th><i class="fas fa-file-medical"></i> Consultation</th>
                        <th><i class="fas fa-calendar"></i> Date</th>
                        <th class="text-center"><i class="fas fa-cog"></i> Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Traitements.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5">
                                <i class="fas fa-syringe fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">Aucun traitement trouvé</h5>
                                <p class="text-muted mb-0">Essayez de modifier vos critères de recherche</p>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var traitement in Model.Traitements)
                        {
                            var patient = traitement.Consultation?.DossierMedical?.Patient?.IdNavigation;
                            var dateConsultation = traitement.Consultation?.DateConsultation;

                            <tr>
                                <td class="fw-bold">@traitement.NumPro</td>
                                <td>
                                    <span class="badge bg-success" title="@traitement.TypeTraitement">
                                        @(traitement.TypeTraitement.Length > 50 ?
                                                                        traitement.TypeTraitement.Substring(0, 50) + "..." :
                                                                        traitement.TypeTraitement)
                            </span>
                        </td>
                        <td>
                            @if (patient != null)
                                    {
                                        <strong>@patient.Nom @patient.Prenom</strong>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (traitement.Consultation != null)
                                    {
                                        <a asp-controller="Consultations"
                                           asp-action="Details"
                                           asp-route-id="@traitement.ConsultationId"
                                           class="text-decoration-none">
                                            <i class="fas fa-file-medical me-1"></i>
                                            Consultation #@traitement.ConsultationId
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (dateConsultation.HasValue)
                                    {
                                        <span>@dateConsultation.Value.ToString("dd/MM/yyyy")</span>
                                        <br>
                                        <small class="text-muted">@dateConsultation.Value.ToString("HH:mm")</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@traitement.NumPro"
                                           class="btn btn-outline-info" title="Détails">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@traitement.NumPro"
                                           class="btn btn-outline-warning" title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@traitement.NumPro"
                                           class="btn btn-outline-danger" title="Supprimer">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @if (Model.Traitements.TotalCount > 0)
        {
            <div class="card-footer bg-white">
                @await Html.PartialAsync("_Pagination", new PaginationPartialViewModel
                {
                    CurrentPage = Model.Traitements.CurrentPage,
                        TotalPages = Model.Traitements.TotalPages,
                        PageSize = Model.PageSize,
                        TotalCount = Model.Traitements.TotalCount,
                        ActionName = "Index",
                        FormId = "pageSizeFormTraitements",
                        RouteValues = new Dictionary<string, string?>
                        {
                        { "searchTerm", Model.SearchTerm },
                        { "sortBy", Model.SortBy }
                        }
                        })
        </div>
                }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('select[name="sortBy"]').change(function() {
                $('#filterForm').submit();
            });
        });
    </script>
}
