@model GestionCabinetMedical.Models.Traitement

@{
    ViewData["Title"] = "Détails Traitement";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="page-header mb-4">
        <h1><i class="fas fa-file-prescription text-info"></i> Détails du Traitement</h1>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0 text-secondary">
                <i class="fas fa-hashtag"></i> Traitement N° @Model.NumPro
            </h5>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 mb-3">
                    <i class="fas fa-pills text-success me-2"></i> @Html.DisplayNameFor(model => model.TypeTraitement)
                </dt>
                <dd class="col-sm-9 mb-3 border-bottom pb-2">
                    <span class="fs-5">@Model.TypeTraitement</span>
                </dd>

                <dt class="col-sm-3 mb-3">
                    <i class="fas fa-file-medical text-primary me-2"></i> Consultation
                </dt>
                <dd class="col-sm-9 mb-3">
                    @if (Model.Consultation != null)
                    {
                        <span class="fw-bold">Consultation N° @Model.Consultation.NumDetail</span>
                        <div class="text-muted small">
                            @if (Model.Consultation.DateConsultation.HasValue)
                            {
                                <span><i class="far fa-calendar-alt"></i> Date : @Model.Consultation.DateConsultation.Value.ToString("dd/MM/yyyy")</span>
                            }
                        </div>
                    }
                    else
                    {
                        <span class="text-muted fst-italic">Liaison consultation non disponible</span>
                    }
                </dd>
            </dl>
        </div>
        <div class="card-footer bg-light text-end">
            <a asp-action="Edit" asp-route-id="@Model?.NumPro" class="btn btn-warning">
                <i class="fas fa-edit"></i> Modifier
            </a>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
        </div>
    </div>
</div>