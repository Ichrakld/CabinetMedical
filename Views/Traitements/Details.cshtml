@model GestionCabinetMedical.Models.Traitement

@{
    ViewData["Title"] = "Détails Traitement";
}

<div class="page-header">
    <h1><i class="fas fa-pills"></i> Détails du Traitement #@Model.NumPro</h1>
</div>

<div class="card shadow">
    <div class="card-header bg-success text-white">
        <h5 class="mb-0"><i class="fas fa-info-circle"></i> Informations du Traitement</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">N° Traitement</dt>
            <dd class="col-sm-9"><strong>@Model.NumPro</strong></dd>

            <dt class="col-sm-3">Type de Traitement</dt>
            <dd class="col-sm-9">
                <span class="badge bg-success" style="font-size: 1rem; white-space: normal; text-align: left;">
                    @Model.TypeTraitement
                </span>
            </dd>

            <dt class="col-sm-3">Consultation</dt>
            <dd class="col-sm-9">
                <a asp-controller="Consultations" asp-action="Details" asp-route-id="@Model.ConsultationId">
                    <i class="fas fa-stethoscope"></i> Consultation #@Model.ConsultationId
                </a>
                @if (Model.Consultation != null)
                {
                    <br />
                    <small class="text-muted">
                        <i class="fas fa-calendar"></i> @Model.Consultation.DateConsultation.ToString("dd/MM/yyyy HH:mm")
                    </small>
                }
            </dd>
        </dl>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Retour à la liste
    </a>
    <a asp-action="Edit" asp-route-id="@Model.NumPro" class="btn btn-warning">
        <i class="fas fa-edit"></i> Modifier
    </a>
    <a asp-action="Delete" asp-route-id="@Model.NumPro" class="btn btn-danger">
        <i class="fas fa-trash"></i> Supprimer
    </a>
</div>
