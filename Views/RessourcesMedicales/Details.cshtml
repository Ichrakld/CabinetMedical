@model GestionCabinetMedical.Models.RessourceMedicale

@{
    ViewData["Title"] = "Détails Ressource";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="page-header mb-4">
        <h1><i class="fas fa-box-open text-info"></i> Détails du Matériel</h1>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0 text-secondary"><i class="fas fa-info-circle"></i> Fiche produit</h5>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 mb-3"><i class="fas fa-tag text-primary me-2"></i> Nom</dt>
                <dd class="col-sm-9 mb-3 border-bottom pb-2 fw-bold">@Model.Nom</dd>

                <dt class="col-sm-3 mb-3"><i class="fas fa-cubes text-success me-2"></i> Stock Actuel</dt>
                <dd class="col-sm-9 mb-3">
                    <span class="fs-4">@Model.Quantite</span>
                    @if (Model.Quantite < 5)
                    {
                        <span class="badge bg-danger ms-2">Critique !</span>
                    }
                    else if (Model.Quantite < 10)
                    {
                        <span class="badge bg-warning text-dark ms-2">Faible</span>
                    }
                </dd>
            </dl>
        </div>
        <div class="card-footer bg-light text-end">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning"><i class="fas fa-edit"></i> Modifier</a>
            <a asp-action="Index" class="btn btn-secondary ms-2"><i class="fas fa-arrow-left"></i> Retour</a>
        </div>
    </div>
</div>