@model GestionCabinetMedical.ViewModels.RessourceMedicaleIndexViewModel
@using GestionCabinetMedical.ViewModels

@{
    ViewData["Title"] = "Ressources Médicales";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fas fa-boxes text-primary me-2"></i>Stock & Matériel
        </h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus-circle me-1"></i>Nouvelle Ressource
        </a>
    </div>

    <!-- Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Statistiques rapides -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-white-50 mb-1">Total Ressources</h6>
                            <h2 class="mb-0">@Model.TotalRessources</h2>
                        </div>
                        <i class="fas fa-box fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-danger text-white shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-white-50 mb-1">Stock Faible (&lt;10)</h6>
                            <h2 class="mb-0">@Model.RessourcesStockFaible</h2>
                        </div>
                        <i class="fas fa-exclamation-triangle fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-white-50 mb-1">Quantité Totale</h6>
                            <h2 class="mb-0">@Model.QuantiteTotale</h2>
                        </div>
                        <i class="fas fa-cubes fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtres -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" id="filterForm">
                <div class="row g-3 align-items-end">
                    <div class="col-md-4">
                        <label class="form-label">
                            <i class="fas fa-search me-1"></i>Recherche
                        </label>
                        <input type="text" name="searchTerm" class="form-control"
                               placeholder="Nom du matériel..."
                               value="@Model.SearchTerm">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">
                            <i class="fas fa-filter me-1"></i>État du stock
                        </label>
                        <select name="stockFilter" class="form-select">
                            <option value="">Tous</option>
                            <option value="faible" selected="@(Model.StockFilter == "faible" ? "selected" : null)">Stock faible (&lt;10)</option>
                            <option value="normal" selected="@(Model.StockFilter == "normal" ? "selected" : null)">Stock normal (≥10)</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">
                            <i class="fas fa-sort me-1"></i>Trier par
                        </label>
                        <select name="sortBy" class="form-select">
                            <option value="nom" selected="@(Model.SortBy == "nom" ? "selected" : null)">Nom</option>
                            <option value="quantite" selected="@(Model.SortBy == "quantite" ? "selected" : null)">Quantité (croissant)</option>
                            <option value="quantite-desc" selected="@(Model.SortBy == "quantite-desc" ? "selected" : null)">Quantité (décroissant)</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-search me-1"></i>Filtrer
                        </button>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(Model.SearchTerm) || !string.IsNullOrEmpty(Model.StockFilter))
                {
                    <div class="mt-3">
                        <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                            <i class="fas fa-times me-1"></i>Réinitialiser les filtres
                        </a>
                    </div>
                }
            </form>
        </div>
    </div>

    <!-- Liste des ressources -->
    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th><i class="fas fa-tag"></i> Nom du matériel</th>
                        <th class="text-center"><i class="fas fa-cubes"></i> Quantité en stock</th>
                        <th class="text-center"><i class="fas fa-cog"></i> Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.RessourceMedicales.Any())
                    {
                        <tr>
                            <td colspan="3" class="text-center py-5">
                                <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">Aucune ressource trouvée</h5>
                                <p class="text-muted mb-0">Essayez de modifier vos critères de recherche</p>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var ressource in Model.RessourceMedicales)
                        {
                            <tr class="@(ressource.Quantite < 10 ? "table-warning" : "")">
                                <td class="fw-bold">
                                    <i class="fas fa-box me-2 text-primary"></i>
                                    @ressource.Nom
                                </td>
                                <td class="text-center">
                                    @if (ressource.Quantite < 10)
                                    {
                                        <span class="badge bg-danger">
                                            <i class="fas fa-exclamation-triangle me-1"></i>
                                            Faible (@ressource.Quantite)
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">@ressource.Quantite unités</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@ressource.Id"
                                           class="btn btn-outline-info" title="Détails">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@ressource.Id"
                                           class="btn btn-outline-warning" title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@ressource.Id"
                                           class="btn btn-outline-danger" title="Supprimer">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @if (Model.RessourceMedicales.TotalCount > 0)
        {
            <div class="card-footer bg-white">
                @await Html.PartialAsync("_Pagination", new PaginationPartialViewModel
                {
                    CurrentPage = Model.RessourceMedicales.CurrentPage,
                        TotalPages = Model.RessourceMedicales.TotalPages,
                        PageSize = Model.PageSize,
                        TotalCount = Model.RessourceMedicales.TotalCount,
                        ActionName = "Index",
                        FormId = "pageSizeFormRessources",
                        RouteValues = new Dictionary<string, string?>
                        {
                        { "searchTerm", Model.SearchTerm },
                        { "stockFilter", Model.StockFilter },
                        { "sortBy", Model.SortBy }
                        }
                        })
        </div>
                }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('select[name="stockFilter"], select[name="sortBy"]').change(function() {
                $('#filterForm').submit();
            });
        });
    </script>
}
