@model IEnumerable<GestionCabinetMedical.Models.RessourceMedicale>

@{
    ViewData["Title"] = "Ressources Médicales";
}

<div class="page-header">
    <h1><i class="fas fa-boxes"></i> Stock & Matériel</h1>
</div>

<div class="mb-4">
    <a asp-action="Create" class="btn btn-success btn-custom">
        <i class="fas fa-plus-circle"></i> Nouvelle Ressource
    </a>
</div>

<div class="table-custom">
    <table class="table table-hover mb-0">
        <thead class="table-light">
            <tr>
                <th><i class="fas fa-tag"></i> Nom du matériel</th>
                <th><i class="fas fa-cubes"></i> Quantité en stock</th>
                <th class="text-center"><i class="fas fa-cog"></i> Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold">@item.Nom</td>
                        <td>
                            @if (item.Quantite < 10)
                            {
                                <span class="badge bg-danger">
                                    <i class="fas fa-exclamation-triangle"></i> Faible (@item.Quantite)
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-success">@item.Quantite unités</span>
                            }
                        </td>
                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center py-4">
                        <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                        <p class="text-muted">Aucune ressource en stock</p>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>