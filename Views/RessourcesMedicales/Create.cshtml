@model GestionCabinetMedical.Models.RessourceMedicale

@{
    ViewData["Title"] = "Ajouter Ressource";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="page-header mb-4">
        <h1><i class="fas fa-plus-square text-success"></i> Ajouter au Stock</h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0 text-secondary"><i class="fas fa-box"></i> Nouveau matériel</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Nom" class="form-label fw-bold">
                                <i class="fas fa-tag text-primary"></i> Nom du produit
                            </label>
                            <input asp-for="Nom" class="form-control" placeholder="Ex: Seringues, Compresses, Masques..." />
                            <span asp-validation-for="Nom" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Quantite" class="form-label fw-bold">
                                <i class="fas fa-layer-group text-success"></i> Quantité initiale
                            </label>
                            <input asp-for="Quantite" class="form-control" type="number" min="0" />
                            <span asp-validation-for="Quantite" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary me-md-2"><i class="fas fa-times"></i> Annuler</a>
                            <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Ajouter</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}