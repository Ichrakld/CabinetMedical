@model GestionCabinetMedical.ViewModels.PatientIndexViewModel

@{
    ViewData["Title"] = "Gestion des Patients";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fas fa-users text-primary me-2"></i>Gestion des Patients
        </h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>Nouveau Patient
        </a>
    </div>

    <!-- Messages de succès/erreur -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Statistiques rapides -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-white-50 mb-1">Total Patients</h6>
                            <h2 class="mb-0">@Model.TotalPatients</h2>
                        </div>
                        <i class="fas fa-users fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-white-50 mb-1">Patients Actifs</h6>
                            <h2 class="mb-0">@Model.PatientsActifs</h2>
                        </div>
                        <i class="fas fa-user-check fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-1">Patients Inactifs</h6>
                            <h2 class="mb-0">@Model.PatientsInactifs</h2>
                        </div>
                        <i class="fas fa-user-slash fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-white-50 mb-1">RDV Récent (30j)</h6>
                            <h2 class="mb-0">@Model.PatientsAvecRdvRecent</h2>
                        </div>
                        <i class="fas fa-calendar-check fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtres -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" id="filterForm">
                <div class="row g-3 align-items-end">
                    <div class="col-md-4">
                        <label class="form-label">
                            <i class="fas fa-search me-1"></i>Recherche
                        </label>
                        <input type="text" name="searchTerm" class="form-control"
                               placeholder="Nom, prénom, email, téléphone, N° SS..."
                               value="@Model.SearchTerm">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">
                            <i class="fas fa-filter me-1"></i>Statut
                        </label>
                        <select name="statut" class="form-select">
                            <option value="">Tous les statuts</option>
                            <option value="actif" selected="@(Model.Statut == "actif" ? "selected" : null)">Actif</option>
                            <option value="inactif" selected="@(Model.Statut == "inactif" ? "selected" : null)">Inactif</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">
                            <i class="fas fa-sort me-1"></i>Trier par
                        </label>
                        <select name="sortBy" class="form-select">
                            <option value="nom" selected="@(Model.SortBy == "nom" ? "selected" : null)">Nom</option>
                            <option value="rdv" selected="@(Model.SortBy == "rdv" ? "selected" : null)">Dernier RDV</option>
                            <option value="nss" selected="@(Model.SortBy == "nss" ? "selected" : null)">N° Sécurité Sociale</option>
                            <option value="age" selected="@(Model.SortBy == "age" ? "selected" : null)">Âge</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-search me-1"></i>Filtrer
                        </button>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(Model.SearchTerm) || !string.IsNullOrEmpty(Model.Statut))
                {
                    <div class="mt-3">
                        <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                            <i class="fas fa-times me-1"></i>Réinitialiser les filtres
                        </a>
                        <span class="ms-2 text-muted">
                            @Model.Patients.Count() résultat(s) sur cette page
                        </span>
                    </div>
                }
            </form>
        </div>
    </div>

    <!-- Liste des patients -->
    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 60px;"></th>
                        <th>Patient</th>
                        <th>Contact</th>
                        <th>N° SS</th>
                        <th>Âge</th>
                        <th>Statut</th>
                        <th>RDV / Dossiers</th>
                        <th>Dernier RDV</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Patients.Any())
                    {
                        <tr>
                            <td colspan="9" class="text-center py-5">
                                <i class="fas fa-search fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">Aucun patient trouvé</h5>
                                <p class="text-muted mb-0">Essayez de modifier vos critères de recherche</p>
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var patient in Model.Patients)
                        {
                            var avatarColor = GetAvatarColor(patient.Id);

                            <tr class="@(!patient.EstActif ? "table-secondary" : "")">
                                <td>
                                    <div class="avatar-initials" style="background-color: @avatarColor;">
                                        @patient.Initials
                                    </div>
                                </td>
                                <td>
                                    <div class="fw-bold">
                                        @patient.Nom @patient.Prenom
                                        @if (!patient.EstActif)
                                        {
                                            <span class="badge bg-secondary ms-1">Inactif</span>
                                        }
                                    </div>
                                    <small class="text-muted">ID: #@patient.Id</small>
                                </td>
                                <td>
                                    <div>
                                        <i class="fas fa-envelope text-muted me-1"></i>
                                        @(patient.Email ?? "-")
                                    </div>
                                    <div>
                                        <i class="fas fa-phone text-muted me-1"></i>
                                        @(patient.Telephone ?? "-")
                                    </div>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(patient.NumSecuriteSociale))
                                    {
                                        <code>@patient.NumSecuriteSociale</code>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (patient.Age.HasValue)
                                    {
                                        <span class="badge bg-info">@patient.Age ans</span>
                                        <br />
                                        <small class="text-muted">@patient.DateNaissance?.ToString("dd/MM/yyyy")</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (patient.EstActif)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check-circle me-1"></i>Actif
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-pause-circle me-1"></i>Inactif
                                        </span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-info me-1" title="Rendez-vous">
                                        <i class="fas fa-calendar-alt me-1"></i>@patient.NombreRdv RDV
                                    </span>
                                    <span class="badge bg-secondary" title="Dossiers médicaux">
                                        <i class="fas fa-folder-open me-1"></i>@patient.NombreDossiers
                                    </span>
                                </td>
                                <td>
                                    @if (patient.DernierRdv.HasValue)
                                    {
                                        <span>@patient.DernierRdv.Value.ToString("dd/MM/yyyy")</span>
                                        <br>
                                        <small class="text-muted">@patient.DernierRdv.Value.ToString("HH:mm")</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Aucun RDV</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@patient.Id"
                                           class="btn btn-outline-info" title="Détails">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@patient.Id"
                                           class="btn btn-outline-primary" title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button"
                                                class="btn btn-outline-warning btn-toggle-status"
                                                data-id="@patient.Id"
                                                data-actif="@patient.EstActif.ToString().ToLower()"
                                                title="@(patient.EstActif ? "Désactiver" : "Activer")">
                                            <i class="fas @(patient.EstActif ? "fa-user-slash" : "fa-user-check")"></i>
                                        </button>
                                        <a asp-action="Delete" asp-route-id="@patient.Id"
                                           class="btn btn-outline-danger" title="Supprimer">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <!-- ============================================================ -->
        <!-- PAGINATION COMPLÈTE -->
        <!-- ============================================================ -->
        @if (Model.Patients.Any())
        {
            var totalItems = Model.TotalPatients;
            var firstItem = ((Model.CurrentPage - 1) * Model.PageSize) + 1;
            var lastItem = Math.Min(Model.CurrentPage * Model.PageSize, totalItems);

            <div class="card-footer bg-light">
                <div class="row align-items-center">
                    <!-- Informations sur les résultats -->
                    <div class="col-md-4">
                        <small class="text-muted">
                            <i class="fas fa-list me-1"></i>
                            Affichage de @firstItem à @lastItem sur @totalItems résultat(s)
                        </small>
                    </div>

                    <!-- Pagination centrale -->
                    <div class="col-md-4">
                        @if (Model.TotalPages > 1)
                        {
                            <nav aria-label="Navigation des pages">
                                <ul class="pagination pagination-sm justify-content-center mb-0">
                                    <!-- Bouton Première page -->
                                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                        <a class="page-link" asp-action="Index"
                                           asp-route-page="1"
                                           asp-route-pageSize="@Model.PageSize"
                                           asp-route-searchTerm="@Model.SearchTerm"
                                           asp-route-statut="@Model.Statut"
                                           asp-route-sortBy="@Model.SortBy"
                                           title="Première page">
                                            <i class="fas fa-angle-double-left"></i>
                                        </a>
                                    </li>

                                    <!-- Bouton Précédent -->
                                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                        <a class="page-link" asp-action="Index"
                                           asp-route-page="@(Model.CurrentPage - 1)"
                                           asp-route-pageSize="@Model.PageSize"
                                           asp-route-searchTerm="@Model.SearchTerm"
                                           asp-route-statut="@Model.Statut"
                                           asp-route-sortBy="@Model.SortBy"
                                           title="Page précédente">
                                            <i class="fas fa-angle-left"></i> Précédent
                                        </a>
                                    </li>

                                    <!-- Numéros de page -->
                                    @{
                                        var startPage = Math.Max(1, Model.CurrentPage - 2);
                                        var endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);

                                        if (startPage > 1)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" asp-action="Index"
                                                   asp-route-page="1"
                                                   asp-route-pageSize="@Model.PageSize"
                                                   asp-route-searchTerm="@Model.SearchTerm"
                                                   asp-route-statut="@Model.Statut"
                                                   asp-route-sortBy="@Model.SortBy">1</a>
                                            </li>
                                            if (startPage > 2)
                                            {
                                                <li class="page-item disabled"><span class="page-link">...</span></li>
                                            }
                                        }

                                        for (int i = startPage; i <= endPage; i++)
                                        {
                                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                                <a class="page-link" asp-action="Index"
                                                   asp-route-page="@i"
                                                   asp-route-pageSize="@Model.PageSize"
                                                   asp-route-searchTerm="@Model.SearchTerm"
                                                   asp-route-statut="@Model.Statut"
                                                   asp-route-sortBy="@Model.SortBy">@i</a>
                                            </li>
                                        }

                                        if (endPage < Model.TotalPages)
                                        {
                                            if (endPage < Model.TotalPages - 1)
                                            {
                                                <li class="page-item disabled"><span class="page-link">...</span></li>
                                            }
                                            <li class="page-item">
                                                <a class="page-link" asp-action="Index"
                                                   asp-route-page="@Model.TotalPages"
                                                   asp-route-pageSize="@Model.PageSize"
                                                   asp-route-searchTerm="@Model.SearchTerm"
                                                   asp-route-statut="@Model.Statut"
                                                   asp-route-sortBy="@Model.SortBy">@Model.TotalPages</a>
                                            </li>
                                        }
                                    }

                                    <!-- Bouton Suivant -->
                                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                        <a class="page-link" asp-action="Index"
                                           asp-route-page="@(Model.CurrentPage + 1)"
                                           asp-route-pageSize="@Model.PageSize"
                                           asp-route-searchTerm="@Model.SearchTerm"
                                           asp-route-statut="@Model.Statut"
                                           asp-route-sortBy="@Model.SortBy"
                                           title="Page suivante">
                                            Suivant <i class="fas fa-angle-right"></i>
                                        </a>
                                    </li>

                                    <!-- Bouton Dernière page -->
                                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                        <a class="page-link" asp-action="Index"
                                           asp-route-page="@Model.TotalPages"
                                           asp-route-pageSize="@Model.PageSize"
                                           asp-route-searchTerm="@Model.SearchTerm"
                                           asp-route-statut="@Model.Statut"
                                           asp-route-sortBy="@Model.SortBy"
                                           title="Dernière page">
                                            <i class="fas fa-angle-double-right"></i>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        }
                    </div>

                    <!-- Sélecteur de taille de page -->
                    <div class="col-md-4 text-end">
                        <form method="get" class="d-inline-flex align-items-center gap-2">
                            <label class="form-label mb-0 text-muted small">
                                <i class="fas fa-th-list me-1"></i>Afficher :
                            </label>
                            <select name="pageSize" class="form-select form-select-sm" style="width: auto;"
                                    onchange="this.form.submit()">
                                <option value="5" selected="@(Model.PageSize == 5 ? "selected" : null)">5</option>
                                <option value="10" selected="@(Model.PageSize == 10 ? "selected" : null)">10</option>
                                <option value="25" selected="@(Model.PageSize == 25 ? "selected" : null)">25</option>
                                <option value="50" selected="@(Model.PageSize == 50 ? "selected" : null)">50</option>
                            </select>
                            <span class="text-muted small">par page</span>

                            <input type="hidden" name="page" value="1" />
                            @if (!string.IsNullOrEmpty(Model.SearchTerm))
                            {
                                <input type="hidden" name="searchTerm" value="@Model.SearchTerm" />
                            }
                            @if (!string.IsNullOrEmpty(Model.Statut))
                            {
                                <input type="hidden" name="statut" value="@Model.Statut" />
                            }
                            @if (!string.IsNullOrEmpty(Model.SortBy))
                            {
                                <input type="hidden" name="sortBy" value="@Model.SortBy" />
                            }
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .avatar-initials {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: bold;
        font-size: 14px;
        text-transform: uppercase;
    }

    .table > tbody > tr:hover {
        background-color: rgba(0, 123, 255, 0.05);
    }

    .table-secondary {
        opacity: 0.7;
    }

    .pagination .page-link {
        padding: 0.375rem 0.75rem;
        border-radius: 0.25rem;
        margin: 0 2px;
    }

    .pagination .page-item.active .page-link {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }

    .pagination .page-item.disabled .page-link {
        color: #6c757d;
        pointer-events: none;
        background-color: #fff;
        border-color: #dee2e6;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('select[name="statut"], select[name="sortBy"]').change(function() {
                $('#filterForm').submit();
            });

            $('.btn-toggle-status').click(function() {
                var btn = $(this);
                var id = btn.data('id');
                var estActif = btn.data('actif') === true || btn.data('actif') === 'true';
                var action = estActif ? 'désactiver' : 'activer';

                if (confirm('Voulez-vous vraiment ' + action + ' ce patient ?')) {
                    $.post('/Patients/ToggleStatus/' + id, function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert('Erreur lors de la modification du statut');
                        }
                    }).fail(function() {
                        alert('Erreur de communication avec le serveur');
                    });
                }
            });
        });
    </script>
}

@functions {
    private string GetAvatarColor(int id)
    {
        var colors = new[] { "#3498db", "#e74c3c", "#2ecc71", "#f39c12", "#9b59b6", "#1abc9c", "#e67e22", "#34495e" };
        return colors[id % colors.Length];
    }
}
