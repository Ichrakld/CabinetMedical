@model GestionCabinetMedical.Models.Patient

@{
    ViewData["Title"] = "Modifier Patient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .detail-card {
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        margin-bottom: 2rem;
        background: white;
    }

    .detail-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem;
        border-radius: 15px 15px 0 0;
    }

    .form-label {
        font-weight: 600;
        color: #4a5568;
    }

    .btn-custom {
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 500;
        transition: all 0.3s;
    }
</style>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="detail-card">
                <div class="detail-header">
                    <h2><i class="fas fa-user-edit"></i> Modifier le Patient</h2>
                    <p class="mb-0">Mise à jour du dossier administratif</p>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label class="form-label">Nom</label>
                                <input type="text" class="form-control bg-light" value="@Model.IdNavigation?.Nom" readonly />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Prénom</label>
                                <input type="text" class="form-control bg-light" value="@Model.IdNavigation?.Prenom" readonly />
                            </div>
                            <small class="text-muted mt-1">Pour modifier le nom ou le prénom, veuillez passer par la gestion des utilisateurs.</small>
                        </div>

                        <div class="mb-4">
                            <label asp-for="NumSecuriteSociale" class="form-label">
                                <i class="fas fa-id-card text-primary me-2"></i>Numéro Sécurité Sociale
                            </label>
                            <input asp-for="NumSecuriteSociale" class="form-control form-control-lg" placeholder="Ex: 1 85 05 78..." />
                            <span asp-validation-for="NumSecuriteSociale" class="text-danger"></span>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary btn-custom">
                                <i class="fas fa-times"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-primary btn-custom">
                                <i class="fas fa-save"></i> Enregistrer
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}