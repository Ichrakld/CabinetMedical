@model GestionCabinetMedical.Models.Patient

@{
    ViewData["Title"] = "Supprimer Patient";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Confirmer la Suppression</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <strong>Attention !</strong> Vous êtes sur le point de supprimer définitivement ce patient et toutes ses données associées.
                    </div>

                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="fas fa-user me-2"></i>Informations du Patient</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>Nom :</strong> @Model.IdNavigation?.Nom @Model.IdNavigation?.Prenom</p>
                                    <p><strong>Email :</strong> @Model.IdNavigation?.Email</p>
                                    <p><strong>Téléphone :</strong> @Model.IdNavigation?.Telephone</p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>N° SS :</strong> <code>@Model.NumSecuriteSociale</code></p>
                                    @if (Model.DateNaissance.HasValue)
                                    {
                                        <p><strong>Date de Naissance :</strong> @Model.DateNaissance?.ToString("dd/MM/yyyy")</p>
                                        <p><strong>Âge :</strong> @Model.Age ans</p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (ViewBag.RdvCount > 0 || ViewBag.DossierCount > 0)
                    {
                        <div class="alert alert-danger">
                            <h6><i class="fas fa-database me-2"></i>Données associées qui seront supprimées :</h6>
                            <ul class="mb-0">
                                @if (ViewBag.RdvCount > 0)
                                {
                                    <li><strong>@ViewBag.RdvCount</strong> rendez-vous</li>
                                }
                                @if (ViewBag.DossierCount > 0)
                                {
                                    <li><strong>@ViewBag.DossierCount</strong> dossiers médicaux (avec toutes les consultations et traitements)</li>
                                }
                                <li>Toutes les notifications associées</li>
                                <li>Le compte utilisateur (connexion impossible après suppression)</li>
                            </ul>
                        </div>
                    }

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-arrow-left me-1"></i>Annuler
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="fas fa-trash me-1"></i>Confirmer la Suppression
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
