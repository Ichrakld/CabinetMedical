@model GestionCabinetMedical.Models.DossierMedical

@{
    ViewData["Title"] = "Nouveau Dossier";
}

<div class="page-header">
    <h1><i class="fas fa-folder-plus"></i> Créer un Dossier Médical</h1>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="PatientId" class="form-label"><i class="fas fa-user-injured"></i> Patient</label>
                    <select asp-for="PatientId" class="form-select" asp-items="ViewBag.PatientId"></select>
                    <span asp-validation-for="PatientId" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="MedecinId" class="form-label"><i class="fas fa-user-md"></i> Médecin</label>
                    <select asp-for="MedecinId" class="form-select" asp-items="ViewBag.MedecinId"></select>
                    <span asp-validation-for="MedecinId" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="GroupeSanguin" class="form-label"><i class="fas fa-tint"></i> Groupe Sanguin</label>
                <select asp-for="GroupeSanguin" class="form-select">
                    <option value="">-- Sélectionner --</option>
                    <option value="A+">A+</option>
                    <option value="A-">A-</option>
                    <option value="B+">B+</option>
                    <option value="B-">B-</option>
                    <option value="AB+">AB+</option>
                    <option value="AB-">AB-</option>
                    <option value="O+">O+</option>
                    <option value="O-">O-</option>
                </select>
                <span asp-validation-for="GroupeSanguin" class="text-danger"></span>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Enregistrer
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Annuler
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}