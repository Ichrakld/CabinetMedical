@model GestionCabinetMedical.Models.DossierMedical

@{
    ViewData["Title"] = "Nouveau Dossier Médical";
}

<div class="page-header">
    <h1><i class="fas fa-folder-plus"></i> Nouveau Dossier Médical</h1>
</div>

<div class="card shadow">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="PatientId" class="form-label"><i class="fas fa-user"></i> Patient</label>
                        <select asp-for="PatientId" class="form-select" asp-items="ViewBag.PatientId">
                            <option value="">-- Sélectionner un patient --</option>
                        </select>
                        <span asp-validation-for="PatientId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="MedecinId" class="form-label"><i class="fas fa-user-md"></i> Médecin Traitant</label>
                        <select asp-for="MedecinId" class="form-select" asp-items="ViewBag.MedecinId">
                            <option value="">-- Sélectionner un médecin --</option>
                        </select>
                        <span asp-validation-for="MedecinId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="GroupeSanguin" class="form-label"><i class="fas fa-tint text-danger"></i> Groupe Sanguin</label>
                        <select asp-for="GroupeSanguin" class="form-select">
                            <option value="">-- Sélectionner --</option>
                            <option value="A+">A+</option>
                            <option value="A-">A-</option>
                            <option value="B+">B+</option>
                            <option value="B-">B-</option>
                            <option value="AB+">AB+</option>
                            <option value="AB-">AB-</option>
                            <option value="O+">O+</option>
                            <option value="O-">O-</option>
                        </select>
                        <span asp-validation-for="GroupeSanguin" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="mb-3">
                        <label asp-for="Allergies" class="form-label"><i class="fas fa-exclamation-triangle text-warning"></i> Allergies</label>
                        <input asp-for="Allergies" class="form-control" placeholder="Ex: Pénicilline, Arachides, Latex (séparer par des virgules)" />
                        <span asp-validation-for="Allergies" class="text-danger"></span>
                        <small class="text-muted">Séparez les allergies par des virgules</small>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="AntecedentsMedicaux" class="form-label"><i class="fas fa-history"></i> Antécédents Médicaux</label>
                <textarea asp-for="AntecedentsMedicaux" class="form-control" rows="4" placeholder="Décrivez les antécédents médicaux du patient..."></textarea>
                <span asp-validation-for="AntecedentsMedicaux" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Annuler
                </a>
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Créer le Dossier
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
