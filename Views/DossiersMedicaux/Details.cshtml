@model GestionCabinetMedical.Models.DossierMedical

@{
    ViewData["Title"] = "Détails Dossier";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="page-header mb-4">
        <h1><i class="fas fa-file-medical-alt text-info"></i> Détails du Dossier N° @Model.NumDossier</h1>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0 text-secondary"><i class="fas fa-info-circle"></i> Informations Générales</h5>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 mb-3">
                    <i class="fas fa-user-injured text-primary me-2"></i> @Html.DisplayNameFor(model => model.Patient)
                </dt>
                <dd class="col-sm-9 mb-3 border-bottom pb-2">
                    @if (Model.Patient?.IdNavigation != null)
                    {
                        <span class="fw-bold">@Model.Patient.IdNavigation.Nom @Model.Patient.IdNavigation.Prenom</span>
                    }
                    else
                    {
                        <span class="text-muted fst-italic">Information non disponible</span>
                    }
                </dd>

                <dt class="col-sm-3 mb-3">
                    <i class="fas fa-user-md text-success me-2"></i> @Html.DisplayNameFor(model => model.Medecin)
                </dt>
                <dd class="col-sm-9 mb-3 border-bottom pb-2">
                    @if (Model.Medecin?.IdNavigation != null)
                    {
                        <span>Dr. @Model.Medecin.IdNavigation.Nom @Model.Medecin.IdNavigation.Prenom</span>
                    }
                    else
                    {
                        <span class="text-muted fst-italic">Information non disponible</span>
                    }
                </dd>

                <dt class="col-sm-3 mb-3">
                    <i class="fas fa-tint text-danger me-2"></i> @Html.DisplayNameFor(model => model.GroupeSanguin)
                </dt>
                <dd class="col-sm-9 mb-3">
                    <span class="badge bg-danger fs-6">@Html.DisplayFor(model => model.GroupeSanguin)</span>
                </dd>
            </dl>
        </div>
        <div class="card-footer bg-light text-end">
            <a asp-action="Edit" asp-route-id="@Model?.NumDossier" class="btn btn-warning">
                <i class="fas fa-edit"></i> Modifier
            </a>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
        </div>
    </div>
</div>