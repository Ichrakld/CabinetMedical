@model GestionCabinetMedical.Models.DossierMedical

@{
    ViewData["Title"] = $"Modifier Dossier #{Model.NumDossier}";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-edit text-warning"></i> Modifier Dossier #@Model.NumDossier</h1>
</div>

<div class="card shadow">
    <div class="card-body">
        <form asp-action="Edit">
            <input type="hidden" asp-for="NumDossier" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="PatientId" class="form-label"><i class="fas fa-user text-primary"></i> Patient <span class="text-danger">*</span></label>
                        <select asp-for="PatientId" class="form-select" asp-items="ViewBag.PatientId"></select>
                        <span asp-validation-for="PatientId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="MedecinId" class="form-label"><i class="fas fa-user-md text-success"></i> Médecin Traitant <span class="text-danger">*</span></label>
                        <select asp-for="MedecinId" class="form-select" asp-items="ViewBag.MedecinId"></select>
                        <span asp-validation-for="MedecinId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <hr class="my-4" />

            <h5 class="text-danger mb-3"><i class="fas fa-heartbeat"></i> Informations Médicales</h5>

            <div class="row">
                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="GroupeSanguin" class="form-label"><i class="fas fa-tint text-danger"></i> Groupe Sanguin</label>
                        <select asp-for="GroupeSanguin" class="form-select">
                            <option value="">-- Sélectionner --</option>
                            <option value="A+">A+</option>
                            <option value="A-">A-</option>
                            <option value="B+">B+</option>
                            <option value="B-">B-</option>
                            <option value="AB+">AB+</option>
                            <option value="AB-">AB-</option>
                            <option value="O+">O+</option>
                            <option value="O-">O-</option>
                        </select>
                        <span asp-validation-for="GroupeSanguin" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="mb-3">
                        <label asp-for="Allergies" class="form-label">
                            <i class="fas fa-exclamation-triangle text-warning"></i> Allergies
                        </label>
                        <input asp-for="Allergies" class="form-control" placeholder="Séparer par des virgules" />
                        <span asp-validation-for="Allergies" class="text-danger"></span>
                        <small class="text-muted"><i class="fas fa-info-circle"></i> Séparez les allergies par des virgules</small>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="AntecedentsMedicaux" class="form-label">
                    <i class="fas fa-history text-info"></i> Antécédents Médicaux
                </label>
                <textarea asp-for="AntecedentsMedicaux" class="form-control" rows="4"></textarea>
                <span asp-validation-for="AntecedentsMedicaux" class="text-danger"></span>
            </div>

            <hr class="my-4" />

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Annuler
                </a>
                <div>
                    <a asp-action="Details" asp-route-id="@Model.NumDossier" class="btn btn-info">
                        <i class="fas fa-eye"></i> Voir Détails
                    </a>
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-save"></i> Enregistrer
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
