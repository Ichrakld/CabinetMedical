@model IEnumerable<GestionCabinetMedical.Models.DossierMedical>

@{
    ViewData["Title"] = "Dossiers Médicaux";
}

<div class="page-header">
    <h1><i class="fas fa-folder-open"></i> Dossiers Médicaux</h1>
</div>

<div class="mb-4">
    <a asp-action="Create" class="btn btn-success btn-custom">
        <i class="fas fa-plus-circle"></i> Nouveau Dossier
    </a>
</div>

<div class="table-custom">
    <table class="table table-hover mb-0">
        <thead class="table-light">
            <tr>
                <th><i class="fas fa-folder"></i> N° Dossier</th>
                <th><i class="fas fa-user-injured"></i> Patient</th>
                <th><i class="fas fa-user-md"></i> Médecin</th>
                <th><i class="fas fa-tint"></i> Groupe Sanguin</th>
                <th class="text-center"><i class="fas fa-cog"></i> Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td><span class="badge bg-primary">@item.NumDossier</span></td>
                        <td>
                            @if (item.Patient?.IdNavigation != null)
                            {
                                @item.Patient.IdNavigation.Nom @item.Patient.IdNavigation.Prenom
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </td>
                        <td>
                            @if (item.Medecin?.IdNavigation != null)
                            {
                                <text>Dr. @item.Medecin.IdNavigation.Nom</text>
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </td>
                        <td><span class="badge bg-danger">@item.GroupeSanguin</span></td>
                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@item.NumDossier" class="btn btn-sm btn-info">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.NumDossier" class="btn btn-sm btn-warning">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.NumDossier" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center py-4">
                        <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
                        <p class="text-muted">Aucun dossier médical</p>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>