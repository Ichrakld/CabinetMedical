@model GestionCabinetMedical.ViewModels.PaginatedList<GestionCabinetMedical.Models.DossierMedical>
@using GestionCabinetMedical.ViewModels

@{
    ViewData["Title"] = "Dossiers Médicaux";
}

<style>
    .allergies-text {
        max-width: 180px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .antecedents-text {
        max-width: 150px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        font-size: 0.85rem;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-folder-open text-info"></i> Dossiers Médicaux</h1>
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus-circle"></i> Nouveau Dossier
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Statistiques -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body text-center">
                <i class="fas fa-folder fa-2x mb-2"></i>
                <h3>@ViewBag.TotalDossiers</h3>
                <small>Total Dossiers</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-dark">
            <div class="card-body text-center">
                <i class="fas fa-exclamation-triangle fa-2x mb-2"></i>
                <h3>@ViewBag.AvecAllergies</h3>
                <small>Avec Allergies</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body text-center">
                <i class="fas fa-history fa-2x mb-2"></i>
                <h3>@ViewBag.AvecAntecedents</h3>
                <small>Avec Antécédents</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body text-center">
                <i class="fas fa-stethoscope fa-2x mb-2"></i>
                <h3>@ViewBag.TotalConsultations</h3>
                <small>Total Consultations</small>
            </div>
        </div>
    </div>
</div>

<!-- Filtres -->
<div class="card shadow mb-4">
    <div class="card-body">
        <form asp-action="Index" method="get" id="filterForm">
            <div class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label class="form-label">
                        <i class="fas fa-search"></i> Recherche
                    </label>
                    <input type="text" name="searchTerm" class="form-control"
                           placeholder="Patient, groupe sanguin, allergies..."
                           value="@ViewBag.SearchTerm">
                </div>
                <div class="col-md-3">
                    <label class="form-label">
                        <i class="fas fa-user-md"></i> Médecin
                    </label>
                    <select name="medecinId" class="form-select">
                        <option value="">Tous les médecins</option>
                        @if (ViewBag.Medecins != null)
                        {
                            foreach (var item in (Microsoft.AspNetCore.Mvc.Rendering.SelectList)ViewBag.Medecins)
                            {
                                if (ViewBag.MedecinId?.ToString() == item.Value)
                                {
                                    <option value="@item.Value" selected>@item.Text</option>
                                }
                                else
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            }
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">
                        <i class="fas fa-filter"></i> Allergies
                    </label>
                    <select name="avecAllergies" class="form-select">
                        <option value="">Tous</option>
                        @if (ViewBag.AvecAllergiesFiltre == true)
                        {
                            <option value="true" selected>Avec allergies</option>
                        }
                        else
                        {
                            <option value="true">Avec allergies</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">
                        <i class="fas fa-sort"></i> Trier par
                    </label>
                    <select name="sortBy" class="form-select">
                        @{
                            var currentSort = ViewBag.SortBy as string ?? "numero";
                        }
                        @if (currentSort == "numero")
                        {
                            <option value="numero" selected>N° Dossier</option>
                            <option value="patient">Patient</option>
                            <option value="medecin">Médecin</option>
                        }
                        else if (currentSort == "patient")
                        {
                            <option value="numero">N° Dossier</option>
                            <option value="patient" selected>Patient</option>
                            <option value="medecin">Médecin</option>
                        }
                        else if (currentSort == "medecin")
                        {
                            <option value="numero">N° Dossier</option>
                            <option value="patient">Patient</option>
                            <option value="medecin" selected>Médecin</option>
                        }
                        else
                        {
                            <option value="numero" selected>N° Dossier</option>
                            <option value="patient">Patient</option>
                            <option value="medecin">Médecin</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search"></i> Filtrer
                    </button>
                </div>
            </div>
            @if (!string.IsNullOrEmpty(ViewBag.SearchTerm) || ViewBag.MedecinId != null || ViewBag.AvecAllergiesFiltre != null)
            {
                <div class="mt-3">
                    <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                        <i class="fas fa-times"></i> Réinitialiser
                    </a>
                    <span class="ms-2 text-muted">
                        @Model.TotalCount résultat(s) trouvé(s)
                    </span>
                </div>
            }
        </form>
    </div>
</div>

<div class="card shadow">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 60px;"><i class="fas fa-hashtag"></i> N°</th>
                        <th><i class="fas fa-user-injured"></i> Patient</th>
                        <th><i class="fas fa-user-md"></i> Médecin</th>
                        <th style="width: 80px;"><i class="fas fa-tint"></i> Groupe</th>
                        <th><i class="fas fa-exclamation-triangle"></i> Allergies</th>
                        <th><i class="fas fa-history"></i> Antécédents</th>
                        <th style="width: 80px;"><i class="fas fa-stethoscope"></i> Consult.</th>
                        <th style="width: 130px;" class="text-center"><i class="fas fa-cog"></i> Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr class="@(!string.IsNullOrEmpty(item.Allergies) ? "table-warning" : "")">
                                <td><strong>#@item.NumDossier</strong></td>
                                <td>
                                    @if (item.Patient != null && item.Patient.IdNavigation != null)
                                    {
                                        <a asp-controller="Patients" asp-action="Details" asp-route-id="@item.PatientId">
                                            <i class="fas fa-user text-primary"></i>
                                            @item.Patient.IdNavigation.Nom @item.Patient.IdNavigation.Prenom
                                        </a>
                                        <br />
                                        <small class="text-muted">
                                            <i class="fas fa-id-card"></i> @item.Patient.NumSecuriteSociale
                                        </small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Medecin != null && item.Medecin.IdNavigation != null)
                                    {
                                        <i class="fas fa-user-md text-success"></i>
                                        <text>Dr. @item.Medecin.IdNavigation.Nom</text>
                                        <br />
                                        <small class="text-muted">@item.Medecin.Specialite</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (!string.IsNullOrEmpty(item.GroupeSanguin))
                                    {
                                        <span class="badge bg-danger fs-6">
                                            <i class="fas fa-tint"></i> @item.GroupeSanguin
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Allergies))
                                    {
                                        var allergiesList = item.Allergies.Split(',');
                                        foreach (var allergie in allergiesList.Take(2))
                                        {
                                            <span class="badge bg-warning text-dark me-1">
                                                <i class="fas fa-exclamation-triangle"></i> @allergie.Trim()
                                            </span>
                                        }
                                        if (allergiesList.Length > 2)
                                        {
                                            <span class="badge bg-secondary">+@(allergiesList.Length - 2)</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge bg-success"><i class="fas fa-check"></i> Aucune</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.AntecedentsMedicaux))
                                    {
                                        <span class="antecedents-text d-inline-block text-muted" title="@item.AntecedentsMedicaux">
                                            <i class="fas fa-history text-info"></i>
                                            @(item.AntecedentsMedicaux.Length > 25 ? item.AntecedentsMedicaux.Substring(0, 25) + "..." : item.AntecedentsMedicaux)
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @{
                                        var nbConsultations = item.Consultations != null ? item.Consultations.Count : 0;
                                        var badgeClass = nbConsultations > 0 ? "bg-success" : "bg-secondary";
                                    }
                                    <span class="badge @badgeClass fs-6">@nbConsultations</span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.NumDossier" class="btn btn-sm btn-info" title="Détails">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.NumDossier" class="btn btn-sm btn-warning" title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.NumDossier" class="btn btn-sm btn-danger" title="Supprimer">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center py-5">
                                <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
                                <p class="text-muted">Aucun dossier médical enregistré</p>
                                <a asp-action="Create" class="btn btn-success">
                                    <i class="fas fa-plus"></i> Créer un dossier
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Pagination -->
    @if (Model.TotalCount > 0)
    {
        <div class="card-footer bg-white">
            @await Html.PartialAsync("_Pagination", new PaginationPartialViewModel
            {
                CurrentPage = Model.CurrentPage,
                TotalPages = Model.TotalPages,
                PageSize = Model.PageSize,
                TotalCount = Model.TotalCount,
                ActionName = "Index",
                FormId = "pageSizeFormDossiers",
                RouteValues = new Dictionary<string, string?>
                {
                { "searchTerm", ViewBag.SearchTerm },
                { "medecinId", ViewBag.MedecinId?.ToString() },
                { "patientId", ViewBag.PatientId?.ToString() },
                { "avecAllergies", ViewBag.AvecAllergiesFiltre?.ToString() },
                { "sortBy", ViewBag.SortBy },
                { "sortOrder", ViewBag.SortOrder }
                }
                })
    </div>
        }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-submit on select change
            $('select[name="medecinId"], select[name="avecAllergies"], select[name="sortBy"]').change(function() {
                $('#filterForm').submit();
            });
        });
    </script>
}
