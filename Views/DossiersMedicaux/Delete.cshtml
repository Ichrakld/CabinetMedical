@model GestionCabinetMedical.Models.DossierMedical

@{
    ViewData["Title"] = "Supprimer un Dossier";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="text-center mb-4">
                <h1 class="text-danger"><i class="fas fa-file-medical-alt"></i> Suppression de Dossier</h1>
                <p class="lead text-muted">Êtes-vous sûr de vouloir supprimer ce dossier médical ?</p>
            </div>

            <div class="alert alert-warning border-warning shadow-sm" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Attention :</strong> Cette action est irréversible. L'historique médical associé à ce numéro de dossier sera perdu.
            </div>

            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0 text-secondary"><i class="fas fa-info-circle"></i> Détails du Dossier N° @Model.NumDossier</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted">Patient</dt>
                        <dd class="col-sm-8 fw-bold text-primary">
                            <i class="fas fa-user-injured me-1"></i>
                            @Html.DisplayFor(model => model.Patient.IdNavigation.Nom)
                            @Html.DisplayFor(model => model.Patient.IdNavigation.Prenom)
                        </dd>

                        <dt class="col-sm-4 text-muted">Médecin Traitant</dt>
                        <dd class="col-sm-8">
                            <i class="fas fa-user-md me-1"></i>
                            Dr. @Html.DisplayFor(model => model.Medecin.IdNavigation.Nom)
                        </dd>

                        <dt class="col-sm-4 text-muted">Groupe Sanguin</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-danger">
                                <i class="fas fa-tint me-1"></i> @Html.DisplayFor(model => model.GroupeSanguin)
                            </span>
                        </dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" class="text-center">
                <input type="hidden" asp-for="NumDossier" />

                <button type="submit" class="btn btn-danger btn-lg px-4 me-2">
                    <i class="fas fa-trash-alt me-2"></i> Confirmer la suppression
                </button>

                <a asp-action="Index" class="btn btn-secondary btn-lg px-4">
                    <i class="fas fa-arrow-left me-2"></i> Annuler
                </a>
            </form>

        </div>
    </div>
</div>