@model GestionCabinetMedical.Models.RendezVou

@{
    ViewData["Title"] = "Nouveau Rendez-vous";
}

<div class="page-header">
    <h1><i class="fas fa-calendar-plus"></i> Planifier un Rendez-vous</h1>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="PatientId" class="form-label"><i class="fas fa-user-injured"></i> Patient</label>
                    <select asp-for="PatientId" class="form-select" asp-items="ViewBag.PatientId"></select>
                    <span asp-validation-for="PatientId" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="MedecinId" class="form-label"><i class="fas fa-user-md"></i> Médecin</label>
                    <select asp-for="MedecinId" class="form-select" asp-items="ViewBag.MedecinId"></select>
                    <span asp-validation-for="MedecinId" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="DateHeure" class="form-label"><i class="fas fa-calendar"></i> Date et Heure</label>
                    <input asp-for="DateHeure" type="datetime-local" class="form-control" />
                    <span asp-validation-for="DateHeure" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Statut" class="form-label"><i class="fas fa-info-circle"></i> Statut</label>
                    <select asp-for="Statut" class="form-select">
                        <option value="En attente">En attente</option>
                        <option value="Confirmé">Confirmé</option>
                        <option value="Annulé">Annulé</option>
                        <option value="Terminé">Terminé</option>
                    </select>
                    <span asp-validation-for="Statut" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Enregistrer
                </button>
                <a asp-action="Index" class="btn btn-secondary">Annuler</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}