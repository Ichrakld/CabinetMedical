@model GestionCabinetMedical.Models.RendezVou

@{
    ViewData["Title"] = "Modifier Rendez-vous";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var minDateTime = DateTime.Now.AddMinutes(1).ToString("yyyy-MM-ddTHH:mm");
}

<div class="container mt-4">
    <div class="page-header mb-4">
        <h1><i class="fas fa-edit text-warning"></i> Modifier le Rendez-vous</h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0 text-secondary"><i class="fas fa-pen"></i> Informations du rendez-vous</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" id="rdvEditForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="NumCom" />

                        <div class="mb-3">
                            <label asp-for="DateHeure" class="form-label fw-bold">
                                <i class="fas fa-clock text-primary"></i> Date et Heure
                            </label>
                            <input asp-for="DateHeure" class="form-control" type="datetime-local"
                                   id="dateHeureInput" min="@minDateTime" />
                            <span asp-validation-for="DateHeure" class="text-danger"></span>
                            <div id="dateError" class="text-danger small mt-1" style="display:none;">
                                <i class="fas fa-exclamation-circle"></i> La date et l'heure doivent être supérieures à maintenant
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PatientId" class="form-label fw-bold">
                                <i class="fas fa-user-injured text-warning"></i> Patient
                            </label>
                            <select asp-for="PatientId" class="form-select" asp-items="ViewBag.PatientId"></select>
                            <span asp-validation-for="PatientId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MedecinId" class="form-label fw-bold">
                                <i class="fas fa-user-md text-success"></i> Médecin
                            </label>
                            <select asp-for="MedecinId" class="form-select" asp-items="ViewBag.MedecinId"></select>
                            <span asp-validation-for="MedecinId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Statut" class="form-label fw-bold">
                                <i class="fas fa-info-circle text-secondary"></i> Statut
                            </label>
                            <select asp-for="Statut" class="form-select">
                                <option value="En attente">En attente</option>
                                <option value="Confirmé">Confirmé</option>
                                <option value="Annulé">Annulé</option>
                                <option value="Terminé">Terminé</option>
                            </select>
                            <span asp-validation-for="Statut" class="text-danger"></span>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> <strong>Note :</strong> Vous ne pouvez pas modifier un rendez-vous pour une date/heure dans le passé.
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">
                                <i class="fas fa-times"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Enregistrer les modifications
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // Mettre à jour la date minimum
            function updateMinDate() {
                var now = new Date();
                now.setMinutes(now.getMinutes() + 1);
                var minDate = now.toISOString().slice(0, 16);
                $('#dateHeureInput').attr('min', minDate);
            }

            updateMinDate();
            setInterval(updateMinDate, 30000);

            // Validation côté client
            $('#dateHeureInput').on('change', function() {
                var selectedDate = new Date($(this).val());
                var now = new Date();

                if (selectedDate <= now) {
                    $('#dateError').show();
                    $(this).addClass('is-invalid');
                } else {
                    $('#dateError').hide();
                    $(this).removeClass('is-invalid');
                }
            });

            // Validation avant soumission
            $('#rdvEditForm').on('submit', function(e) {
                var selectedDate = new Date($('#dateHeureInput').val());
                var now = new Date();

                if (selectedDate <= now) {
                    e.preventDefault();
                    $('#dateError').show();
                    $('#dateHeureInput').addClass('is-invalid');
                    alert('Erreur : La date et l\'heure du rendez-vous doivent être supérieures à maintenant.');
                    return false;
                }
            });
        });
    </script>
}
