@model GestionCabinetMedical.Models.Medecin

@{
    ViewData["Title"] = "Nouveau Médecin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="page-header mb-4">
        <h1><i class="fas fa-user-plus text-success"></i> Ajouter un Médecin</h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0 text-secondary"><i class="fas fa-user-md"></i> Nouveau membre de l'équipe</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Id" class="form-label fw-bold">
                                <i class="fas fa-user text-primary"></i> Sélectionner l'utilisateur
                            </label>
                            <select asp-for="Id" class="form-select" asp-items="ViewBag.Id"></select>
                            <div class="form-text">Choisissez un utilisateur existant pour l'inscrire comme médecin.</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Specialite" class="form-label fw-bold">
                                <i class="fas fa-stethoscope text-success"></i> Spécialité
                            </label>
                            <input asp-for="Specialite" class="form-control" placeholder="Ex: Pédiatrie" />
                            <span asp-validation-for="Specialite" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">
                                <i class="fas fa-times"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Ajouter
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}