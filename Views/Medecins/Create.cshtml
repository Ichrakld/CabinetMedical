@model GestionCabinetMedical.Models.Medecin

@{
    ViewData["Title"] = "Nouveau Médecin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="page-header mb-4">
        <h1><i class="fas fa-user-plus text-success"></i> Ajouter un Médecin</h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0 text-secondary"><i class="fas fa-user-md"></i> Nouveau membre de l'équipe</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <h6 class="text-muted mb-3">Informations de connexion</h6>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Nom</label>
                                <input asp-for="IdNavigation.Nom" class="form-control" required />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Prénom</label>
                                <input asp-for="IdNavigation.Prenom" class="form-control" required />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input asp-for="IdNavigation.Email" type="email" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mot de passe provisoire</label>
                            <input asp-for="IdNavigation.MotDePasse" type="password" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Téléphone</label>
                            <input asp-for="IdNavigation.Telephone" class="form-control" />
                        </div>

                        <hr />

                        <h6 class="text-muted mb-3">Informations Professionnelles</h6>
                        <div class="mb-3">
                            <label asp-for="Specialite" class="form-label fw-bold">
                                <i class="fas fa-stethoscope text-success"></i> Spécialité
                            </label>
                            <input asp-for="Specialite" class="form-control" placeholder="Ex: Pédiatrie" required />
                            <span asp-validation-for="Specialite" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">Annuler</a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Créer Médecin & Utilisateur
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>