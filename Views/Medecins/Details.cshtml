@model GestionCabinetMedical.Models.Medecin

@{
    ViewData["Title"] = "Détails Médecin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="page-header mb-4">
        <h1><i class="fas fa-user-md text-info"></i> Profil du Médecin</h1>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0 text-secondary">
                <i class="fas fa-info-circle"></i> Informations personnelles et professionnelles
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-2 text-center mb-3">
                    <i class="fas fa-user-circle fa-6x text-secondary"></i>
                </div>
                <div class="col-md-10">
                    <dl class="row mb-0">
                        <dt class="col-sm-3 mb-3">
                            <i class="fas fa-id-card text-primary me-2"></i> Identité
                        </dt>
                        <dd class="col-sm-9 mb-3 border-bottom pb-2">
                            <span class="fs-5 fw-bold">Dr. @Model.IdNavigation?.Nom @Model.IdNavigation?.Prenom</span>
                        </dd>

                        <dt class="col-sm-3 mb-3">
                            <i class="fas fa-stethoscope text-success me-2"></i> @Html.DisplayNameFor(model => model.Specialite)
                        </dt>
                        <dd class="col-sm-9 mb-3 border-bottom pb-2">
                            <span class="badge bg-info text-dark fs-6">@Model.Specialite</span>
                        </dd>

                        <dt class="col-sm-3 mb-3">
                            <i class="fas fa-address-book text-secondary me-2"></i> Contact
                        </dt>
                        <dd class="col-sm-9 mb-3">
                            <p class="mb-1"><i class="fas fa-envelope text-muted"></i> @Model.IdNavigation?.Email</p>
                            <p class="mb-0"><i class="fas fa-phone text-muted"></i> @Model.IdNavigation?.Telephone</p>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer bg-light text-end">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
                <i class="fas fa-edit"></i> Modifier
            </a>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
        </div>
    </div>
</div>